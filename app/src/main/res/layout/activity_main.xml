<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9f8e8"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/bannerAdText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#222121"
                android:text="Banner Ad" />

            <Button
                android:id="@+id/loadBannerAdButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#18cccc"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:text="Load" />

            <Button
                android:id="@+id/showBannerAdButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#18cccc"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="Show" />
        </TableRow>

        <View android:layout_height="1dp" android:layout_width="match_parent" android:background="@color/black" android:layout_margin="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/interstitialAdText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textColor="#222121"
                android:fontFamily="sans-serif-black"
                android:text="Interstitial Ad" />

            <Button
                android:id="@+id/loadInterstitialAdButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#18cccc"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:text="Load" />

            <Button
                android:id="@+id/showInterstitialAdButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#18cccc"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="Show" />
        </TableRow>

        <View android:layout_height="1dp" android:layout_width="match_parent" android:background="@color/black" android:layout_margin="10dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/rewardedAdText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textColor="#222121"
                android:fontFamily="sans-serif-black"
                android:text="Rewarded Ad" />

            <Button
                android:id="@+id/loadRewardedAdButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#18cccc"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:text="Load" />

            <Button
                android:id="@+id/showRewardedAdButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#18cccc"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="Show" />
        </TableRow>

        <View android:layout_height="1dp" android:layout_width="match_parent" android:background="@color/black" android:layout_margin="10dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/mrecAdText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textColor="#222121"
                android:fontFamily="sans-serif-black"
                android:text="MREC Ad" />

            <Button
                android:id="@+id/loadMrecAdButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#18cccc"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:text="Load" />

            <Button
                android:id="@+id/showMrecAd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#18cccc"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="Show" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/bannerViewgroup"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/mrecViewgroup"/>



</LinearLayout>